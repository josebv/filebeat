filebeat:
  prospectors:
    -
      paths:
        - "/var/log/*.log"
        - "/var/log/[nginx]*/*log"
        - /var/log/messages
      type: syslog
    -
      paths:
        - "/var/log/nginx/*log"
      type: nginx-access

output:
  logstash:
    enabled: true
    hosts:
      - {{logstash1}}:5044
      - {{logstash2}}:5044
      - {{logstash3}}:5044
      - {{logstash4}}:5044
    loadbalance: true
